<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_headline"
            tools:text="Car" />

        <TextView
            android:id="@+id/text_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/text_type"
            android:layout_toRightOf="@id/text_type"
            android:layout_toEndOf="@id/text_type"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textSize="@dimen/text_title"
            tools:text="Volkswagen Polo" />

        <TextView
            android:id="@+id/text_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_type"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_title"
            tools:text="2 Seats Available" />

        <TextView
            android:id="@+id/text_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_model"
            android:layout_toRightOf="@id/text_seats"
            android:layout_toEndOf="@id/text_seats"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_body"
            tools:text="HR 26 AF734" />

        <TextView
            android:id="@+id/text_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_seats"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_body"
            tools:text="Pickup: Vasant Vihar" />

        <TextView
            android:id="@+id/text_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_pickup"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_body"
            tools:text="300/month" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rate"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_body"
            tools:text="Call: 987654321" />

        <TextView
            android:id="@+id/stub_posted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_phone"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_large_body"
            android:text="@string/post_item_posted_by" />

        <View
            android:id="@+id/view_profile_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/stub_posted_by"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_blue_dark" />


        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stub_posted_by"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/view_profile_photo"
            android:layout_toEndOf="@id/view_profile_photo"
            android:textSize="@dimen/text_body"
            tools:text="Antony Ribot" />

        <TextView
            android:id="@+id/text_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/view_profile_photo"
            android:layout_toEndOf="@id/view_profile_photo"
            android:textSize="@dimen/text_small_body"
            tools:text="B.Tech CS OSS" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
